<div id="right"> 
    <!-- table -->
    <div class="box"> 
      <!-- box / title -->
      <div class="title">
        <h5>Thay đổi thông tin đơn hàng</h5>
      </div>
      <!-- end box / title -->
      <!-- box / form -->
      <%= form_for(@admin_order) do |f| %>
      <!-- box / messages -->
      <% if @admin_order.errors.any? %>
      <div id="box-messages" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
			<div class="messages">
				<div class="message message-error" id="message-error">
					<div class="image">
						<img height="32" alt="Error" src="<%=asset_path('admin/error.png')%>">
					</div>
					<div class="text">
						<h6>Có <%= pluralize(@admin_order.errors.count, "lỗi") %> xảy ra !</h6>
						<% @admin_order.errors.full_messages.each do |message| %>
					        <span><%= message %></span>
					    <% end %>
					</div>
					<div class="dismiss">
						<a href="#message-error"></a>
					</div>
				</div>
			</div>
		</div>
		<%end%>
	  <!-- end box / messages -->	
        <div class="form">
          <div class="fields">
            <div class="field">
              <div class="label"><label for="input-small">Tên khách hàng:</label></div>
              <div class="input"><%= f.text_field :cs_name, :class=>"medium" %></div>
            </div>
            <div class="field">
              <div class="label"><label for="input-small">Địa chỉ giao hàng:</label></div>
              <div class="input"><%= f.text_field :cs_address, :class=>"medium" %></div>
            </div>
            <div class="field">
              <div class="label"><label for="input-small">Điện thoại:</label></div>
              <div class="input"><%= f.text_field :cs_phone, :class=>"medium" %></div>
            </div>
            <div class="field">
              <div class="label"><label for="input-small">Email:</label></div>
              <div class="input"><%= f.text_field :cs_email, :class=>"medium" %></div>
            </div>
            <div class="field">
              <div class="label">
                <label for="select">Tình trạng:</label>
              </div>
              
              <div class="select">
                <select name="order[cs_status]" id="order_cs_status">
                  <option value="0">Chưa kích hoạt</option>
                  <option value="1">Đợi giao hàng</option>
                  <option value="2">Hoàn thành</option>
                </select>
              </div>

            </div>
            <div class="buttons">
              <%= f.submit "Lưu lại",:class=>"form-submit" %>
              <input type="reset" value="Reset" name="reset">
            </div>
          </div>
        </div>
      <%end%>
      <!-- end box / form -->
    </div>
    <!-- end table --> 
</div>