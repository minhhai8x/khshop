<div id="right"> 
<div class="box  box-padding ui-tabs ui-widget ui-widget-content ui-corner-all" id="box-left-tabs">
<!-- box / title -->
<div class="title">
<h5 align="center" style="float: none;">Chỉnh sửa thuộc tính</h5>
</div>
<!-- end box / title -->
<!-- box / form -->
  <%= form_for(@admin_attribute) do |f| %>
  <!-- box / messages -->
 <% if @admin_attribute.errors.any? %>
  <div id="box-messages" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
		<div class="messages">
			<div class="message message-error" id="message-error">
				<div class="image">
					<img height="32" alt="Error" src="<%=asset_path('admin/error.png')%>">
				</div>
				<div class="text">
					<h6>Có <%= pluralize(@admin_attribute.errors.count, "lỗi") %> xảy ra !</h6>
					<% @admin_attribute.errors.full_messages.each do |message| %>
				        <span><%= message %></span>
				    <% end %>
				</div>
				<div class="dismiss">
					<a href="#message-error"></a>
				</div>
			</div>
		</div>
	</div>
	<%end%>
  <!-- end box / messages -->
  
<div id="box-left-forms">
<div class="form">
<div class="fields">
	
<div class="field">
  <div class="label"><label for="input-small">Tên thuộc tính:</label></div>
  <div class="input"><%= f.text_field :name, :class=>"medium" %></div>
</div>

<div class="field">
  <div class="label"><label for="input-small">Sắp xếp:</label></div>
  <div class="input"><%= f.text_field :orderby, :class=>"tiny" %></div>
</div>
<div class="field">
  <div class="label"><label for="input-small">Mô tả:</label></div>
  <div style="height: 100px;" class="textarea textarea-editor"><%= f.text_area :description, :class=>"medium" %></div>
</div>
<div class="field">
  <div class="label"><label for="select">Tình trạng:</label></div>
  <div class="select">
    <%= f.select( :product_id, options_for_select([["Chưa kích hoạt",0],["Đã kích hoạt",1]], :selected=>f.object.product_id))%>                
  </div>
</div>
<div class="buttons"><%= f.submit "Lưu lại",:class=>"form-submit" %></div>
  </div>
</div>

<!-- end box / form -->
</div>
<%end%>
</div>
</div>