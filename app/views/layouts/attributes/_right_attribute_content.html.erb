<div id="right"> 
    <!-- table -->
    <div class="box"> 
      <!-- box / title -->
      <div class="title">
        <h5>Danh sách thuộc tính</h5>
      </div>
      <!-- end box / title -->
      <div class="table">
      	<div class="action">
		<div class="button">
			<%= link_to "Thêm thuộc tính",new_admin_attribute_path,:class=>"ui-button ui-widget ui-state ui-corner-all"%>
		</div>
	  </div>
	  <br clear="all" /><br clear="all" />
        <form action="" method="post">
          <table>
            <thead>
              <tr>
              	<th class="selected">STT</th>
                <th>Tên thuộc tính</th>
                <th>Mô tả</th>
                <th>Sắp xếp</th>
                <th>Thao tác</th>
              </tr>
            </thead>
            <tbody>
            <% @admin_attributes.each.with_index  do |at,index| %>	
              <tr>
              	<td class="selected"><%=index+1%></td>
                <td class="price"><%= at.name %></td>
                <td class="date"><%= at.description %></td>
                <td class="price"><%= at.orderby %></td>
                <td class="category">
                <div class="btncontrol">
                	<%= link_to image_tag(asset_path('admin/pencil.png')), edit_admin_attribute_path(at), :title=>"Sửa"%>
                    <div style="width:10px;"></div>
                    <%= link_to image_tag(asset_path('admin/remove.png')), at, method: :delete, data: { confirm: 'Bạn có chắc muốn xóa ?' }, :title=>"Xóa" %>
                </div>
                </td>
              </tr>
             <%end%> 
            </tbody>
          </table>
        </form>
      </div>
    </div>
    <!-- end table --> 
</div>