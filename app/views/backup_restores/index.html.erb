<h1>Listing backup_restores</h1>

<table>
  <thead>
    <tr>
      <th>Br reason</th>
      <th>Br userid</th>
      <th>Br note</th>
      <th>Br status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backup_restores.each do |backup_restore| %>
      <tr>
        <td><%= backup_restore.br_reason %></td>
        <td><%= backup_restore.br_userid %></td>
        <td><%= backup_restore.br_note %></td>
        <td><%= backup_restore.br_status %></td>
        <td><%= link_to 'Show', backup_restore %></td>
        <td><%= link_to 'Edit', edit_backup_restore_path(backup_restore) %></td>
        <td><%= link_to 'Destroy', backup_restore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

